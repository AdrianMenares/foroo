<!DOCTYPE html>
<html>
  <head>
    <title>Foroo</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <div class="navbar-fixed">
    <nav class="blue darken-2">
      <div class="nav-wrapper">

        <%= link_to "Foro", root_path, class: "brand-logo center" %>

        <ul class="right hide-on-med-and-down">
          <% if user_signed_in? %>
            <li><%= link_to 'Editar perfil', edit_user_registration_path, :class => 'navbar-link' %></li>
            <li><%= link_to "Cerrar sesion", destroy_user_session_path, method: :delete, :class => 'navbar-link'  %></li>
          <% else %>
            <li><%= link_to "Registrarse", new_user_registration_path, :class => 'navbar-link'  %><li>
            <li><%= link_to "Iniciar Sesion", new_user_session_path, :class => 'navbar-link'  %><li>
        <% end %>

        </ul>
      </div>
    </nav>
    <p class="navbar-text float-right">
</p>
    </div>
    <div class="container">

    <%= yield %>
  </body>
</html>
